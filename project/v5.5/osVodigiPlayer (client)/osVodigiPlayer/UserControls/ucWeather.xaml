                       FontFamily="Verdana" Foreground="#FFFFFFFF" FontSize="18" FontWeight="Bold"></TextBlock>

            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" 
                       Margin="60,410,0,0" Width="100" Height="25" TextAlignment="Left" Text="High" 
                       FontFamily="Verdana" Foreground="#FFB4D4FD" FontSize="18" FontWeight="Bold"></TextBlock>

            <TextBlock x:Name="txtHigh3" VerticalAlignment="Top" HorizontalAlignment="Left" 
                       Margin="140,400,0,0" Width="100" Height="80" TextAlignment="Left" Text="80" 
