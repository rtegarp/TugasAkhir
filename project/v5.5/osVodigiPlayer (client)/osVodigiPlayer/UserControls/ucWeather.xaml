                       StrokeThickness="5" Stroke="#FFFFFFFF" RadiusX="20" RadiusY="20">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3084F1" Offset="0.5" />
                        <GradientStop Color="#0E4287" Offset="1.0" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,30,0,0" Width="240" Height="240"
                       RadiusX="10" RadiusY="10" Fill="#FFFFFFFF" StrokeThickness="0" Stroke="#0E4287"></Rectangle>

            <Image x:Name="imgWeatherDay3" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,40,0,0" Width="220" Height="220"></Image>

            <TextBlock x:Name="txtDayOfWeek3" VerticalAlignment="Top" HorizontalAlignment="Left" 
                       Margin="0,280,0,0" Width="300" Height="32" TextAlignment="Center" Text="DayOfWeek" 
                       FontFamily="Verdana" Foreground="#FFFFFFFF" FontSize="22" FontWeight="Bold"></TextBlock>

