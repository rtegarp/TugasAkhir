<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Vodigi</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.js")" type="text/javascript"></script>
<script type="text/javascript" lang="javascript">
    $(function () {
        var admin = $("#txtIsAdmin").val();
        if (admin == "true") {
            $("#adminlinks").show();
        }
    });
</script>
</head>
<body>
    <div class="page">
        <header>
            <div class="pageheader">
                <img src="@Url.Content("~/Images/vodigi-logo.png")" alt="" style="position:relative; left:-200px; top:2px;" />
                <img src="@Url.Content("~/Images/vodigi-tag.png")" alt="" style="position:relative; left:200px;" />
            </div>
            <div class="pagemenubar">
                <table class="menutable">
                    <tr>
                        <td class="menucell">
                            <div id="menulink">
                                @Html.ActionLink("Player Groups", "Index", "PlayerGroup") | @Html.ActionLink("Players", "Index", "Player") ||
                                @Html.ActionLink("Screens", "Index", "Screen") | @Html.ActionLink("Screen Content", "Index", "ScreenContent") ||
                                @Html.ActionLink("Uploads", "Index", "Upload") ||
                                @Html.ActionLink("Slide Shows", "Index", "SlideShow") | @Html.ActionLink("Images", "Index", "Image") ||
                                @Html.ActionLink("Play Lists", "Index", "PlayList") | @Html.ActionLink("Videos", "Index", "Video") ||
                                @Html.ActionLink("Music", "Index", "Music") ||
                                @Html.ActionLink("Surveys", "Index", "Survey") ||
                                @Html.ActionLink("Reports", "Index", "Report") 
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="pagelogininfo">
                <span style="float:left;padding-left:20px;">
                    @Html.Raw((string)ViewData["LoginInfo"])
                </span>
                <span style="float:right;padding-right:20px;">
                    <span id="adminlinklogoff">@Html.ActionLink("Logoff", "Validate", "Login")</span>
                    <span id="adminlinks" style="display:none;">  
                        <span id="adminlinkaccounts">@Html.ActionLink("Accounts", "Index", "Account")</span>
                        <span id="adminlinkusers">@Html.ActionLink("Users", "Index", "User")</span>
                        <span id="adminlinkmessages">@Html.ActionLink("Messages", "Index", "SystemMessage")</span>
                    </span>
                </span>
            </div>
        </header>
        <section id="sectionmain">
            @RenderBody()
        </section>
        <footer>
            <div class="pagefooter">
                <span class="footertext" style="position:relative; top:6px;">Copyright &copy; 2005-2012, JMC Publications, LLC</span>
            </div>
        </footer>
    </div>
    <div id="imagepopup">
        <img id="imglargepreview" alt="" src="" class="imagepopuppreview" />
    </div>
    <div id="videopopup">
        <video id="videolargepreview" autoplay controls src="" class="videopopuppreview" />
    </div>
    @Html.Hidden("txtIsAdmin", ViewData["txtIsAdmin"])
</body>
</html>
